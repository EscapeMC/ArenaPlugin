package com.github.escapemc.arenaplugin.teams;

import java.util.ArrayList;

import org.bukkit.ChatColor;
import org.bukkit.entity.Player;

import com.github.escapemc.arenaplugin.bases.Team;

public class BlueTeam extends Team {

	public void setBlueSpawn(double posX, double posY, double posZ, Player playerIn) {
		
		this.spawnX = posX;
		this.spawnY = posY;
		this.spawnZ = posZ;
				
		posX = playerIn.getLocation().getX();
		posY = playerIn.getLocation().getY();
		posZ = playerIn.getLocation().getZ();
		
		teleLoc = posX + posY + posZ;
		
	}
	
	public void teleportBlueSpawn(double posX, double posY, double posZ, Player playerIn, ArrayList<Player> list) {
		
		if(list.isEmpty()) {
			
			playerIn.sendMessage(ChatColor.DARK_BLUE + "There are no players on the Blue Team.");
			
		}else{
			
			playerCount = list.size();
			
			for(num = 0; num < playerCount; num++) {
				
				if(list.contains(playerIn.getName()) {
					
					playerIn.teleport();
					
				}
				
			}
			
		}
		
	}
	
}
